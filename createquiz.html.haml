!!!
%html
  %head
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "material/css/ripples.min.css", :rel => "stylesheet"}/
    %link{:href => "material/css/material-wfont.min.css", :rel => "stylesheet"}/
    %link{:href => "style.css", :rel => "stylesheet"}/
  %body
    .navbar.navbar-default
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => "javascript:void(0)"} Logo SocioQuiz
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav
          %li
            %a{:href => "javascript:void(0)"} Home
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{:href => "javascript:void(0)", :style => "padding: 8px 15px;"}
              %div{:style => "border-radius: 100%; border: 2px solid rgba(255, 255, 255, 0.84); width: 45px; margin-left: auto; margin-right: auto;"}
                %i.mdi-social-notifications{:style => "font-size: 40px;  position: relative;"}
                  %span.badge{:style => "position: absolute; right: 5px;\r\n                        bottom: -5px; border-radius: 2px !important; background-color: #D9534F;"} 3
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "javascript:void(0)"}
              %p{:style => "margin: 0px; padding: 0px;"}
                %img.row-avatar{:alt => "icon", :src => "http://lorempixel.com/56/56/people/6"}>/
                Username
                %b.caret
            %ul.dropdown-menu
              %li{:style => "padding: 3px 20px; font-size: 16px;"} Total Point: 9696
              %li
                %a{:href => "javascript:void(0)"} Edit profile
              %li.divider
              %li
                %a{:href => "javascript:void(0)"} Sign out
    .container
      .jumbotron
        .row
          .col-md-3
            .side-option
              .toolbar
                %legend Option
              .content
                .type-quiz
                  .form-group
                    %label.control-label Type Quiz
                    %div
                      .radio.radio-primary
                        %label
                          %input#Multiple-choice{:checked => "checked", :name => "type-quiz", :type => "radio", :value => "option1"}>/
                          Multiple choice
                      .radio.radio-primary
                        %label
                          %input#Checkboxes{:name => "type-quiz", :type => "radio", :value => "option2"}>/
                          Checkboxes
                      .radio.radio-primary
                        %label
                          %input#True-False{:name => "type-quiz", :type => "radio", :value => "option2"}>/
                          True / False
                      .radio.radio-primary
                        %label
                          %input#Fill-in-the-blank{:name => "type-quiz", :type => "radio", :value => "option2"}>/
                          Fill in the blank
                      .radio.radio-primary
                        %label
                          %input#Matching{:name => "type-quiz", :type => "radio", :value => "option2"}>/
                          Matching
                .category
                  .form-group
                    %label.control-label Category
                    %div
                      .radio.radio-primary
                        %label
                          %input#Entertainment{:checked => "checked", :name => "category", :type => "radio", :value => "option1"}>/
                          Entertainment
                      .radio.radio-primary
                        %label
                          %input#Sport{:name => "category", :type => "radio", :value => "option2"}>/
                          Sport
                      .radio.radio-primary
                        %label
                          %input#TV-Movies{:name => "category", :type => "radio", :value => "option2"}>/
                          TV & Movies
                      .radio.radio-primary
                        %label
                          %input#Music{:name => "category", :type => "radio", :value => "option2"}>/
                          Music
                      .radio.radio-primary
                        %label
                          %input#Food-Drink{:name => "category", :type => "radio", :value => "option2"}>/
                          Food & Drink
                      .radio.radio-primary
                        %label
                          %input#Geography{:name => "category", :type => "radio", :value => "option2"}>/
                          Geography
                      .radio.radio-primary
                        %label
                          %input#General-Knowledge{:name => "category", :type => "radio", :value => "option2"}>/
                          General Knowledge
                      .radio.radio-primary
                        %label
                          %input#History{:name => "category", :type => "radio", :value => "option2"}>/
                          History
                      .radio.radio-primary
                        %label
                          %input#Science-Nature{:name => "category", :type => "radio", :value => "option2"}>/
                          Science and Nature
          .col-md-9{:style => "border-left: 2px solid red;"}
            .question
              %legend Question
              %div
                %textarea#textArea.form-control{:placeholder => "Please enter question here ...", :rows => "3"}
              .row{:style => "margin: 20px 0;"}
                .checkbox.col-md-3.none-margin-top
                  %label
                    %input{:type => "checkbox"}>/
                    Picture or Video:
                .col-md-9
                  %input.form-control.floating-label{:placeholder => "Browse...", :readonly => "readonly", :type => "text"}/
                  %input#inputFile{:multiple => "multiple", :type => "file"}/
            .divider
            .answer{:style => "padding: 15px;"}
              %legend Answer
              .answer_true_false{:style => "display: none"}
                .radio.radio-primary
                  %label
                    %input#true{:checked => "checked", :name => "answer", :type => "radio", :value => "option1"}>/
                    True
                .radio.radio-primary
                  %label
                    %input#false{:name => "answer", :type => "radio", :value => "option2"}>/
                    False
              .answer_checkboxes
                .row
                  .checkbox.col-md-3.none-margin-top
                    %label
                      %input{:type => "checkbox"}>/
                      Answer 1:
                  .form-group.col-md-9
                    %input#inputLarge.form-control.input-lg{:type => "text"}/
                .row
                  .checkbox.col-md-3.none-margin-top
                    %label
                      %input{:type => "checkbox"}>/
                      Answer 2:
                  .form-group.col-md-9
                    %input#inputLarge.form-control.input-lg{:type => "text"}/
                .row
                  .checkbox.col-md-3.none-margin-top
                    %label
                      %input{:type => "checkbox"}>/
                      Answer 3:
                  .form-group.col-md-9
                    %input#inputLarge.form-control.input-lg{:type => "text"}/
                .row
                  .checkbox.col-md-3.none-margin-top
                    %label
                      %input{:type => "checkbox"}>/
                      Answer 4:
                  .form-group.col-md-9
                    %input#inputLarge.form-control.input-lg{:type => "text"}/
                %button.btn.btn-primary{:type => "button"}
                  %i.mdi-content-add>
                  Add new answer
            .divider
            .explain.row{:style => "padding: 15px;"}
              .checkbox.col-md-2.none-margin-top
                %label
                  %input{:type => "checkbox"}>/
                  Explain:
              .col-md-10
                %textarea#textArea.form-control{:rows => "3"}
            %button.btn.btn-primary{:style => "float: right;", :type => "button"}
              %i.mdi-content-save
              Save
    %script{:src => "https://code.jquery.com/jquery-1.10.2.min.js"}
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    %script{:src => "material/js/ripples.min.js"}
    %script{:src => "material/js/material.min.js"}